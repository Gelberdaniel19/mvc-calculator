<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.beans.property.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<VBox spacing="20" alignment="CENTER" fx:controller="land.spooky.calculator.Controller" xmlns:fx="http://javafx.com/fxml">

  <padding>
    <Insets top="25" right="25" bottom="25" left="25" />
  </padding>
  
  <fx:define>
    <Font fx:id="FONT" size="36" />
  </fx:define>
  
  <StackPane  alignment="CENTER_RIGHT">
    <Rectangle fill="TRANSPARENT" stroke="GRAY" width="460" height="100" />
    <StackPane alignment="CENTER_RIGHT">
      <padding>
	<Insets right="25" />
      </padding>
      <Text fx:id="output" font="$FONT" text="0" />
    </StackPane>
  </StackPane>

  <HBox spacing="20" alignment="CENTER">
    <Button text="7" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="8" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="9" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="+" prefWidth="100" font="$FONT" onAction="#processOperator" />
  </HBox>

  <HBox spacing="20" alignment="CENTER">
    <Button text="4" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="5" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="6" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="-" prefWidth="100" font="$FONT" onAction="#processOperator" />
  </HBox>
  
  <HBox spacing="20" alignment="CENTER">
    <Button text="1" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="2" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="3" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="/" prefWidth="100" font="$FONT" onAction="#processOperator" />
  </HBox>
  
  <HBox spacing="20" alignment="CENTER">
    <Button text="C" prefWidth="100" font="$FONT" onAction="#processClear" />
    <Button text="0" prefWidth="100" font="$FONT" onAction="#processNumpad" />
    <Button text="=" prefWidth="100" font="$FONT" onAction="#processOperator" />
    <Button text="*" prefWidth="100" font="$FONT" onAction="#processOperator" />
  </HBox>
  
</VBox>
